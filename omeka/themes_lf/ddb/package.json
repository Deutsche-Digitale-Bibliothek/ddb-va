{
  "name": "ddblitfass01",
  "version": "1.0.0",
  "description": "DDB Litfa√ü default theme",
  "main": "index.php",
  "author": "Viktor Grandgeorg",
  "license": "GPL-3.0",
  "dependencies": {
    "bootstrap": "^4.3.1",
    "fullpage.js": "^3.0.7",
    "jquery": "^3.4.1",
    "panzoom": "^8.1.2",
    "popper.js": "^1.15.0",
    "shariff": "^3.2.1",
    "simplebar": "^3.1.5"
  },
  "devDependencies": {
    "autoprefixer": "^9.6.1",
    "clean-css-cli": "^4.3.0",
    "eslint": "^6.2.0",
    "node-sass": "^4.12.0",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^6.1.3",
    "shx": "^0.3.2",
    "stylelint": "^10.1.0",
    "stylelint-config-recommended-scss": "^3.3.0",
    "stylelint-config-standard": "^18.3.0",
    "stylelint-order": "^3.0.1",
    "stylelint-scss": "^3.9.3",
    "uglify-js": "^3.6.0"
  },
  "sass": "src/scss/custom.scss",
  "style": "css/spa.css",
  "scripts": {
    "css-compile": "node-sass --output-style expanded --source-map true --source-map-contents true --precision 6 src/scss/custom.scss css/spa.css",
    "css-lint": "stylelint --config src/build/.stylelintrc --syntax scss \"src/scss/**/*.scss\"",
    "css-prefix": "postcss --config src/build/postcss.config.js --replace \"css/*spa.css\" \"!css/*.min.css\"",
    "css-minify": "cleancss --level 1 --source-map --source-map-inline-sources --output css/spa.min.css css/spa.css",
    "css-main": "npm-run-all --parallel css-lint css-compile --sequential css-prefix css-minify",
    "watch-css-main": "nodemon --watch src/scss/ --ext scss --exec \"npm run css-main\"",
    "js-lint": "eslint -c src/build/.eslintrc.js src/js",
    "js-minify": "uglifyjs --compress --mangle --comments \"/^!/\" --output javascripts/bundle.min.js node_modules/jquery/dist/jquery.js node_modules/fullpage.js/dist/fullpage.extensions.min.js node_modules/simplebar/dist/simplebar.js node_modules/shariff/dist/shariff.min.js node_modules/panzoom/dist/panzoom.js src/js/app.js",
    "js-minify-options": "uglifyjs --compress --mangle --comments \"/^!/\" --output javascripts/options.min.js src/js/options.js",
    "js-main": "npm-run-all js-lint js-minify js-minify-options",
    "watch-js-main": "nodemon --watch src/js/ --ext js --exec \"npm run js-main\""
  }
}
